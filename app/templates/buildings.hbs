<h1> Building index </h1>
<div class="form">
  <h2> Input STUB </h2>
  <form class="form-horizontal" {{action "createBuilding" on="submit"}}>
    <div class="form-group">
      <label for="bClass" class="col-md-2 control-label">Класс</label>
      <div class="col-md-5">
        {{input value=bclass class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="street" class="col-md-2 control-label">Улица</label>
      <div class="col-md-5">
        {{input value=street class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="houseNumber" class="col-md-2 control-label">№ дома</label>
      <div class="col-md-5">
        {{input value=housenumber class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="floors" class="col-md-2 control-label">Кол-во этажей</label>
      <div class="col-md-5">
        {{input value=floors class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-sm btn-primary">Сохранить</button>
      </div>
    </div>
  </form>
  <br>
  <br>
</div>
<div class="output">
  <h2> All Buildings </h2>
  <table>
    <tr>
      <th>|  #  |</th>
      <th>|КЛАСС|</th>
      <th>|Улица|</th>
      <th>|№ ДОМА|</th>
      <th>|КОЛ-ВО ЭТАЖЕЙ|</th>
    </tr>
    {{#each model as |building|}}
      <tr>
        <td>
          {{building.id}}
          <br>
        </td>
        <td>
          {{building.bclass}}
          <br>
        </td>
        <td>
          {{building.street}}
          <br>
        </td>
        <td>
          {{building.housenumber}}
          <br>
        </td>
        <td>
          {{building.floors}}
          <br>
        </td>
      </tr>
    {{/each}}
  </table>
</div>
